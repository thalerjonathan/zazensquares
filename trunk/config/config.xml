<?xml version="1.0" encoding="iso-8859-1"?>

<config>
  <coreScript file="scripts/core/core.lua"/>

  <subSystemList>
    <subSystem file="physics/config.xml"/>
    <subSystem file="graphics/config.xml"/>
    <subSystem file="input/config.xml"/>
    <subSystem file="audio/config.xml"/>
  </subSystemList>

  <control target="Camera"/>

  <objectList>
    <object name="Scene">
      <graphics>
        <scene>
          <!-- no skybox: pitch black like doom3 :D -->
        </scene>
      </graphics>
    </object>

    <object name="Camera" class="UserControl">
      <graphics>
        <camera view="PROJ" fov="90"/>

        <orientation x="0" y="50" z="150" roll="0" heading="0" pitch="0"/>
      </graphics>
    </object>

    <object name="PointLight">
      <graphics>
        <light type="POINT">
          <color r="1.0" g="1.0" b="1.0" />

          <specular shininess="100.0" strength="1.5"  />

          <attenuation constant="1.0" linear="0.0" quadratic="0.0" />

          <shadowing resMapX="2048" resMapY="2048"/>
        </light>

        <orientation x="0" y="70" z="0" roll="0" heading="0" pitch="0"/>
      </graphics>
    </object>

    <object name="Hellknight">
      <graphics>
        <mesh file="doom3/hellknight/hellknight.md5mesh" />

        <material id="HellknightMaterial" />

        <orientation x="0" y="0" z="0" roll="90" heading="30" pitch="180" scale="0.5"/>

        <animation directory="hellknight" extension=".md5anim" active="idle2"/>
      </graphics>
    </object>

    <!-- proof that we can use two mesh-instances with same animations -->
    <object name="Hellknight2">
      <graphics>
        <mesh file="doom3/hellknight/hellknight.md5mesh" />

        <material id="HellknightMaterial" />

        <orientation x="0" y="0" z="80" roll="90" heading="30" pitch="180" scale="0.5"/>

        <animation directory="hellknight" extension=".md5anim" active="idle2"/>
      </graphics>
    </object>

    <object name="Hellknight3">
      <graphics>
        <mesh file="doom3/hellknight/hellknight.md5mesh" />

        <material id="HellknightMaterial" />

        <orientation x="0" y="0" z="-80" roll="90" heading="30" pitch="180" scale="0.5"/>

        <animation directory="hellknight" extension=".md5anim" active="attack2"/>
      </graphics>
    </object>

    <object name="Imp">
      <graphics>
        <mesh file="doom3/imp/imp.md5mesh" />

        <material id="ImpMaterial" />

        <orientation x="80" y="0" z="0" roll="0" heading="30" pitch="180" scale="1"/>

        <animation directory="imp" extension=".md5anim" active="idle1"/>
      </graphics>
    </object>

    <object name="Cyberdemon">
      <graphics>
        <mesh file="doom3/cyberdemon/cyberdemon.md5mesh" />

        <material id="CyberdemonMaterial" />

        <orientation x="-100" y="0" z="0" roll="0" heading="30" pitch="180" scale="0.5"/>

        <animation directory="cyberdemon" extension=".md5anim" active="idle"/>
      </graphics>
    </object>

    <object name="FloorRow1Center">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="0" y="0" z="-200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow1Left">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="-200" y="0" z="-200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow1Right">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="200" y="0" z="-200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow2Center">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="0" y="0" z="0" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow2Left">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="-200" y="0" z="0" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow2Right">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="200" y="0" z="0" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow3Center">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="0" y="0" z="200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow3Left">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="-200" y="0" z="200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

    <object name="FloorRow3Right">
      <graphics>
        <mesh file="floor_large.3DS" />

        <material id="WoodPlanks" />

        <orientation x="200" y="0" z="200" roll="0" heading="0" pitch="0" />
      </graphics>
    </object>

  </objectList>
</config>