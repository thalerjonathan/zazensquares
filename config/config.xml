<?xml version="1.0" encoding="ISO-8859-1"?>

<config>
  <coreScript file="scripts/core/core.lua"/>

  <subSystemList>
    <subSystem file="physics/config.xml"/>
    <subSystem file="graphics/config.xml"/>
    <subSystem file="input/config.xml"/>
    <subSystem file="audio/config.xml"/>
  </subSystemList>

  <control target="Camera"/>

  <objectList>
    <object name="Scene">
      <graphics>
        <scene>
          <!-- no skybox: pitch black like doom3 :D -->
        </scene>
      </graphics>
    </object>

    <object name="Camera" class="UserControl">
      <graphics>
        <camera view="PROJ" fov="90"/>

        <orientation x="0" y="50" z="100" roll="0" heading="0" pitch="0"/>
      </graphics>
    </object>

    <object name="SpotLight_1">
      <graphics>
        <light type="SPOT"/>

        <orientation x="-50" y="100" z="60" roll="0" heading="0" pitch="-40"/>

        <shadowing fov="90" resMapX="2048" resMapY="2048"/>
      </graphics>
    </object>

    <object name="SpotLight_2">
      <graphics>
        <light type="SPOT"/>

        <orientation x="50" y="100" z="60" roll="0" heading="0" pitch="-40"/>

